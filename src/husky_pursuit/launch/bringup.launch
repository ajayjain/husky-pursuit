<!-- This is for the onboard robot computer -->
<launch>

	<include file="$(find husky_base)/launch/base.launch">
		<arg name="port" value="/dev/ttyUSB0" />
	</include>

	<!-- Husky URDFs? Transforms? -->
	<include file="$(find husky_description)/launch/description.launch" />

	#### publish an example base_link -> laser transform ###########

  	<node pkg="tf" type="static_transform_publisher" name="base_link_to_laser" args="0.25 0.0 0.25 0.0 0.0 0.0 /base_link /laser 40" />

  	<node pkg="tf" type="static_transform_publisher" name="odom_footprint_link" args="0 0 0 0 0 0 /odom_combined /base_footprint 100" />

	<!-- <include file="$(find hokuyo_node)/launch/hokuyo_test.launch" /> -->
	<node name="hokuyo" pkg="hokuyo_node" type="hokuyo_node" respawn="false" output="screen">
		<!-- Starts up faster, but timestamps will be inaccurate. --> 
		<!-- <param name="calibrate_time" type="bool" value="false"/>  -->
		<!-- Set the port to connect to here -->
		<param name="port" type="string" value="/dev/ttyACM0"/> 
		<param name="intensity" type="bool" value="false"/>
		<!-- <param name="frame_id" value="/base_footprint_rear_bumper_part"/> -->
		<param name="frame_id" value="/laser"/>
	</node>

	<include file="$(find husky_pursuit)/launch/camera.launch" />
	<!-- <include file="$(find husky_navigation)/launch/odom_navigation_demo.launch" /> -->
</launch>
